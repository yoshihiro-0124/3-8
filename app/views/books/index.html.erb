<body>
  <h1>Books</h1>

   <div>
          <table>
            <thead>
              <tr>
               <th>Title</th>
               <th>Body</th>
               <th colspan="3"></th>
              </tr>
             </thead>
             <tbody>
             <% @books.each do |book| %>
               <tr>
                 <td><%= book.title%></td>
                 <td><%= book.body%></td>
               　 <td>
               　   <%= link_to 'show', book_path(book.id) %> </td>
               　  <td>
               　   <%= link_to 'edit', edit_book_path(book.id) %> </td>
               　   <td>
               　   <%= link_to 'destroy', book_path(book.id), method: :delete %> </td>
               </tr>
               <%end%>
             </tbody>
          </table>
          </div>

  <h1>New books</h1>

     <% if flash[:notice] %>
       <p id="notice">
       <%= flash[:notice] %>
       </p>
     <% end %>

     <% if @book.errors.any? %>
       <div id="error_explanation">
         <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
         <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
         </ul>
       </div>
      <% end %>

  <%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>

<% end %>

</body>